<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p id="notice"><%= notice %></p>

      <p>
        <strong class="text-center">Description:</strong>
        <%= @pin.description %>
      </p>
      <% if @pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(@pin) %> |
      <% end %>
      <%= link_to 'Back', pins_path %>
    </div>
  </div>
</div>
