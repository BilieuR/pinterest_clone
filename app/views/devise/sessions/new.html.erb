<body id="login-bg">
  <div class="login-bg">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="log-in panel">
            <div class="panel-heading">
              <h2>Log in</h2>

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="panel-body">
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :email %><br />
                      <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'input-lg form-control' %>
                    </div>
                    <br>
                    <div class="field">
                      <%= f.label :password %><br />
                      <%= f.password_field :password, required: true, placeholder: 'Password', class: 'input-lg form-control', autocomplete: "off" %>
                    </div>
                    <br>
                    <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end -%>

                    <div class="actions">
                      <%= f.submit "Log in", class: 'btn-lg btn-primary btn-block' %>
                    </div>
                  </div>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
